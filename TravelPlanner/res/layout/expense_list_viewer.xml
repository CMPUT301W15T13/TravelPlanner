<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cmput301w15t13.Activities.ExpenseActivity" >

    <ListView
        android:id="@+id/listViewExpenseItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonNewExpense"
        android:layout_alignParentTop="true" >

    </ListView>

    <Button
        android:id="@+id/buttonNewExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="newExpenseItem"
        android:padding="0px"
        android:text="@string/new_expense"
        android:textColor="@color/text" />

</RelativeLayout>