<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ReceiptPhotoActivity" >

    <TextView
        android:id="@+id/moneySignText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take A photo of your receipt"
        android:textColor="@color/text" />

    <ImageButton
        android:id="@+id/expenseManagerPictureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewTags"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/moneySignText"
        android:layout_marginTop="16dp"
        android:onClick="takeAPhoto"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textViewTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expenseManagerPictureButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="132dp"
        android:text="Result:"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textViewTags"
        android:layout_marginTop="21dp"
        android:text="Waiting..."
        android:textColor="@color/text" />

</RelativeLayout>