<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/ApproverReturnChoiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:text="@string/ApproverReturnText" />

    <Button
        android:id="@+id/ButtonReturnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ApproverReturnChoiceText"
        android:text="@string/ReturnCancel" />

    <Button
        android:id="@+id/ButtonReturnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ApproverReturnChoiceText"
        android:layout_below="@+id/ApproverReturnChoiceText"
        android:text="@string/ReturnOk" />

</RelativeLayout>
